/* components/horizontalList/horizontalList.wxss */
.activityCon {
  margin: 20rpx 0;
}
.activityCon .item navigator{
  display: flex;
  justify-content: space-between;
  padding: 40rpx 0;
  border-bottom: 1px solid #f5f5f5;
}
.activityCon .item image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 15rpx;
}
.a-info{
  padding: 0 20rpx;
  width: 63%;
}
.a-info .title{
  font-size: 34rpx;
  font-weight: bold;
  color: #1d2541;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.a-des .p{
  font-size: 28rpx;
  color: #999;
  margin: 7rpx 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  min-height: 80rpx;
}
.a-des .tag{
  font-size: 26rpx;
  color: #999;
  padding: 5rpx 0;
  margin-top: 10rpx;
}