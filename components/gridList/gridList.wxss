/* components/gridList/gridList.wxss */
.content{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding-left: 25rpx;
}
 
.item {
  padding: 25rpx 25rpx 0 0;
  width: 50%;
  box-sizing: border-box;
}
.item image{
  width: 100%;
  height: 300rpx;
  border-radius: 15rpx;
}
.i-info{
  padding: 5px ;
}
.i-infoTitle{
  font-size: 34rpx;
  font-weight: bold;
}
.i-infoDes{
  font-size: 28rpx;
  color: #999;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 100%;
  padding: 5px 0 0;
}